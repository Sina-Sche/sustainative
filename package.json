{
  "name": "cra-with-api",
  "private": true,
  "version": "1.0.0",
  "description": "Boilerplate for Create-React-App with an Express.js API",
  "main": "server.js",
  "scripts": {
    "postinstall": "cd client && npm install",
    "test": "echo \\\"Error: no test specified\\\" && exit 1",
    "prettify": "prettier --write .",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "storybook": "cd client && npm run storybook",
    "build": "cd client && npm run build && npm run build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sina-Sche/cra-with-api.git"
  },
  "author": "Sina Sche",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sina-Sche/cra-with-api/issues"
  },
  "homepage": "https://github.com/Sina-Sche/cra-with-api#readme",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "immer": "^8.0.1",
    "mongodb": "^3.6.3",
    "react-query": "^3.5.16",
    "react-router-dom": "^5.2.0"
  }
}
